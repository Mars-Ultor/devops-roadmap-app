{
  "name": "server",
  "version": "1.0.0",
  "description": "DevOps Roadmap App - Backend API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm --experimental-specifier-resolution=node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:backup": "node scripts/backup-sqlite.js",
    "db:migrate": "node scripts/migrate-to-postgres.js",
    "db:verify": "node scripts/verify-migration.js",
    "db:setup": "node scripts/setup-production-db.js",
    "db:deploy": "node scripts/deploy-database.js",
    "lint": "eslint src/**/*.ts",
    "lint:complexity": "eslint src/**/*.ts --format=compact --no-error-on-unmatched-pattern 2>nul | findstr /R \"complexity cognitive-complexity max-lines max-params max-depth\" || echo No complexity issues found",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --passWithNoTests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/js-yaml": "^4.0.9",
    "@types/redis": "^4.0.10",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.19.0",
    "redis": "^5.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
